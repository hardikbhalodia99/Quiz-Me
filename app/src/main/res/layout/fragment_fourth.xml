<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/fourquestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Which method can be defined only once in a program?"
        android:textSize="25dp"
        android:textColor="#000000"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="25dp"

        android:layout_centerHorizontal="true"


        />

    <ImageView
        android:id="@+id/img1"
        android:layout_below="@+id/fourquestion"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:clickable="true"
        android:src="@drawable/hello" />

    <TextView
        android:id="@+id/img1tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/img1"
        android:layout_alignTop="@+id/img1"
        android:layout_alignRight="@+id/img1"
        android:layout_alignBottom="@+id/img1"
        android:layout_margin="1dp"
        android:gravity="center"
        android:text="Hello"
        android:textSize="20dp"
        android:textColor="#ffff00" />

    <ImageView
        android:id="@+id/img2"
        android:layout_below="@+id/img1"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:clickable="true"

        android:src="@drawable/hello" />

    <TextView
        android:id="@+id/img2tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/img2"
        android:layout_alignTop="@+id/img2"
        android:layout_alignRight="@+id/img2"
        android:layout_alignBottom="@+id/img2"
        android:layout_margin="1dp"
        android:gravity="center"
        android:text="@string/hello_blank_fragment"
        android:textSize="20dp"
        android:textColor="#ffff00" />

    <ImageView
        android:id="@+id/img3"
        android:layout_below="@+id/img2"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:clickable="true"

        android:src="@drawable/hello" />

    <TextView
        android:id="@+id/img3tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/img3"
        android:layout_alignTop="@+id/img3"
        android:layout_alignRight="@+id/img3"
        android:layout_alignBottom="@+id/img3"
        android:layout_margin="1dp"
        android:gravity="center"
        android:text="Hello"
        android:textSize="20dp"
        android:textColor="#ffff00" />

    <ImageView
        android:id="@+id/img4"
        android:layout_below="@+id/img3"
        android:layout_marginTop="20dp"
        android:clickable="true"

        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:src="@drawable/hello" />

    <TextView
        android:id="@+id/img4tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/img4"
        android:layout_alignTop="@+id/img4"
        android:layout_alignRight="@+id/img4"
        android:layout_alignBottom="@+id/img4"
        android:layout_margin="1dp"
        android:gravity="center"
        android:text="Hello"
        android:textSize="20dp"
        android:textColor="#ffff00" />



</RelativeLayout>